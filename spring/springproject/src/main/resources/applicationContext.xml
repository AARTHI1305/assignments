<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dbConnection" class="com.springproject.DatabaseConnection">
        <property name="url" value="jdbc:mysql://localhost:3306/mydb"/>
    </bean>

    <bean id="userRepository" class="com.springproject.UserRepository">
        <constructor-arg ref="dbConnection"/>
    </bean>

    <bean id="userService" class="com.springproject.UserService">
        <property name="userRepository" ref="userRepository"/>
    </bean>

</beans>
